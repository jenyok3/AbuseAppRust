{
  "productName": "AbuseApp",
  "version": "1.0.2",
  "identifier": "com.abuseapp.desktop",
  "build": {
    "frontendDist": "../dist/public",
    "devUrl": "http://localhost:4000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AbuseApp",
        "width": 1400,
        "height": 750,
        "minWidth": 620,
        "minHeight": 430,
        "resizable": true,
        "fullscreen": false,
        "center": false,
        "decorations": false,
        "visible": false,
        "transparent": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' ws://localhost:4000 http://localhost:4000;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Account Farm Management Dashboard",
    "longDescription": "AbuseApp Desktop - Professional account farm management system with advanced features for Telegram and Chrome automation."
  }
}
