{
  "productName": "AbuseApp",
  "version": "1.0.0",
  "identifier": "com.abuseapp.desktop",
  "build": {
    "frontendDist": "../client/dist/public",
    "devUrl": "http://localhost:4000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AbuseApp",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Account Farm Management Dashboard",
    "longDescription": "AbuseApp Desktop - Professional account farm management system with advanced features for Telegram and Chrome automation."
  }
}